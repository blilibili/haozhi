.showInvite-toast-box{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 11;
  background: #000000;
  opacity:0.6;
}
.showInvite-invite-box{
  position: fixed;
  z-index: 11;
  top: 30%;
  width: 100%;
}
.showInvite-invite-body{
  width: 560rpx;
  background: #ffffff;
  color: #111111;
  margin: 0 auto;
  border-radius: 8rpx;
}
.showInvite-phone-title{
  font-size: 32rpx;
  padding: 48rpx 35rpx;
}
.showInvite-phone-input{
  align-items: center;
}
.showInvite-phone-input input{
  width: 336rpx;
  height: 60rpx;
  border-radius: 6rpx;
  border:1rpx solid #bfbfbf;
  box-shadow: 2rpx -4rpx 1rpx rgba(206, 206, 206, 0.35);
  margin-left: 56rpx;
  padding: 0rpx 20rpx;
}
.showInvite-right-icon{
  line-height: 1em;
}
.showInvite-right-icon image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 56rpx;
}
.showInvite-invite-btn{
  margin-top: 54rpx;
  border-top: 1rpx solid #d2d3d5;
}
.showInvite-ibtn{
  font-size: 36rpx;
  width: 50%;
  padding: 22rpx;
  text-align: center;
}
.showInvite-ibtn-right{
  border-left: 1rpx solid #d2d3d5;
  color: #ff9cb8;
}