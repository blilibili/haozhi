.wxapp-toast-content-box {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 7vh;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wxapp-toast-content {
  width: 60%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
}

.wxapp-toast-content-text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}