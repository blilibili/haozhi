<view class="page">
    <view class="weui-article">
        <view class="weui-article__h1">{{newInfo.title}}</view>
        <view class="weui-article__section">
            <view class="weui-article__title">{{newInfo.dateTime}} {{newInfo.summary}}</view>
            <view class="weui-article__section">
                <view class="weui-article__h3"></view>
                <view class="weui-article__p">
                    <image class="weui-article__img" src="{{newInfo.picture}}" mode="aspectFit" style="width: 100%" />
                </view>
                <view class="weui-article__p" style="text-indent:30px;">
                    {{newInfo.content}}
                </view>
            </view>
        </view>
    </view>
</view>