/* pages/count/index.wxss */
@import '../common/lib/weui.wxss';

icon{
	vertical-align:middle;
}

/*统计记录========================================*/
.tc{
	background:#ffffff;
	height: 100%;
}
.nobody{
	text-align: center;
	margin-top: 362rpx;
}
.select-tab{
	text-align: center;
	border-bottom: 1px solid #e5e5e5;
	height: 80rpx;
	align-items:center;
}
.select-tab image{
	width: 10px;
	height: 10px;
}
.count-title{
	margin: 50rpx 0px 0px 30rpx;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.move-container {
  width: 100%;
}
#mychart-dom-move-bar {
  width: 100%;
  height: 300px;
  display: block;
}
.count-total-body{
	align-items: center;
}
.count-total-hd{
	width: 20rpx;
	height:8rpx;
	background: #ff9cb8;
}
.count-total-hd-color{
	background: #999999;
}
.count-total-bd{
	margin-left: 20rpx;
	font-size: 28rpx;
	color: #666666;
}

/*我的仓库========================================*/
.user-head{
	background: white;
	padding: 28rpx 30rpx;
	border-bottom: 1rpx solid #eeeeee;
}
.head-name{
	font-size: 34rpx;
	color: #111111;
}
.user-local{
	font-size: 22rpx;
	color: #ffffff;
	border-radius: 6rpx;
	background: #cbcbcb;
	margin-left: 16rpx;
	padding: 8rpx 14rpx;
}
.head-id{
	font-size: 30rpx;
	color: #999999;
}
.right-icon{
	width: 16rpx;
	height: 26rpx;
	margin-left: 14rpx;
}
.right-item{
	padding: 26rpx 0px;
}
.right-item text{
	height: 26rpx;
	color: #009944;
}
.list-head{
	padding: 24rpx 30rpx 14rpx 30rpx;
}
.list-title{
	font-size: 28rpx;color: #888888;
}
.eidt-btn{
	height: 50rpx;
	background: #ffffff;
	color: #ff9cb8;
	border:1rpx solid #ff9cb8;
	border-radius: 6rpx;
	font-size: 22rpx;
	line-height: 2.2em;
}
.eidt-btn:after{
	border:none;
}
.user-weight{
	font-size: 26rpx;
	color: #999999;
}
.weui-cells:after{
	border:none;
}
.weui-cells:before {
	border:none;
}
.weui-cell:before {
	border-top: 1rpx solid #e5e5e5;
}
.bottom-btn{
	background: #ffffff;
	margin-top: 100rpx;
	padding: 34rpx 50rpx;
}
.del-text{
	color: #f43531;
}