/* pages/count/index.wxss */
@import '../common/lib/weui.wxss';

icon{
	vertical-align:middle;
}

/*统计记录========================================*/
.tc{
	background:#ffffff;
	height: 100%;
}
.nobody{
	text-align: center;
	margin-top: 362rpx;
}
.select-tab{
	text-align: center;
	padding: 5px 0px;
}
.select-tab image{
	width: 10px;
	height: 10px;
}
.count-title{
	padding: 30px;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*我的仓库========================================*/
.user-head{
	background: white;
	padding: 28rpx 30rpx;
	border-bottom: 1rpx solid #eeeeee;
}
.head-name{
	font-size: 34rpx;
	color: #111111;
}
.user-local{
	font-size: 22rpx;
	color: #ffffff;
	border-radius: 6rpx;
	background: #cbcbcb;
	margin-left: 16rpx;
	padding: 8rpx 14rpx;
}
.head-id{
	font-size: 30rpx;
	color: #999999;
}
.right-icon{
	width: 16rpx;
	height: 26rpx;
	margin-left: 14rpx;
}
.right-item{
	padding: 26rpx 0px;
}
.right-item text{
	height: 26rpx;
	color: #009944;
}
.list-head{
	padding: 24rpx 30rpx 14rpx 30rpx;
}
.list-title{
	font-size: 28rpx;color: #888888;
}
.eidt-btn{
	height: 50rpx;
	background: #ffffff;
	color: #ff9cb8;
	border:1rpx solid #ff9cb8;
	border-radius: 6rpx;
	font-size: 22rpx;
	line-height: 2.2em;
}
.eidt-btn:after{
	border:none;
}
.user-weight{
	font-size: 26rpx;
	color: #999999;
}
.weui-cells:after{
	border:none;
}
.weui-cells:before {
	border:none;
}
.weui-cell:before {
	border-top: 1rpx solid #e5e5e5;
}
.bottom-btn{
	background: #ffffff;
	margin-top: 100rpx;
	padding: 34rpx 50rpx;
}
.del-text{
	color: #f43531;
}