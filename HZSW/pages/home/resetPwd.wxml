<view class="form-input mt80">
	<view class="weui-flex form-input-item">
		<view class="left-icon">
			手机号
		</view>
		<view class="weui-flex__item">
			<input type="number" placeholder="请输入手机号" name="phone" maxlength="11"/>
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			验证码
		</view>
		<view class="weui-flex__item">
			<input type="number" placeholder="请输入验证码" name="code" maxlength="6"/>
		</view>
		<view class="weui-flex__item getcode">
			获取验证码
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			原始密码
		</view>
		<view class="weui-flex__item">
			<input type="text" password="true" placeholder="请输入原始密码" name="oldpwd" maxlength="15"/>
		</view>
		<view class="right-icon">
			<image class="noshowpwd" src="/image/login_icon_mima.png"/>
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			新密码
		</view>
		<view class="weui-flex__item">
			<input type="text" password="true" placeholder="8-16位的数字、字母组合" name="newpwd" maxlength="15"/>
		</view>
		<view class="right-icon">
			<image class="noshowpwd" src="/image/login_icon_mima_pre.png"/>
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			确认密码
		</view>
		<view class="weui-flex__item">
			<input type="text" password="true" placeholder="请再输入一次新密码" name="compwd" maxlength="15"/>
		</view>
		<view class="right-icon">
			<image class="noshowpwd" src="/image/login_icon_mima.png"/>
		</view>
	</view>
	
	<button class="login" bindtap="doReset">确定</button>
</view>