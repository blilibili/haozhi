<import src="head.wxml"/>
<template is="head"/>
<view class="form-input">
	<view class="weui-flex form-input-item">
		<view class="left-icon">
			<image src="/image/login_icon_tel.png"/>
		</view>
		<view class="weui-flex__item">
			<input type="number" placeholder="请输入手机号" name="phone" maxlength="11"/>
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			<image src="/image/login_icon_yanzhengma.png"/>
		</view>
		<view class="weui-flex__item">
			<input type="number" placeholder="请输入验证码" name="code" maxlength="6"/>
		</view>
		<view class="weui-flex__item getcode">
			获取验证码
		</view>
	</view>
	<view class="weui-flex form-input-item item-list">
		<view class="left-icon">
			<image src="/image/login_icon_shurumima.png"/>
		</view>
		<view class="weui-flex__item">
			<input type="text" password="true" placeholder="请输入密码" name="password" maxlength="15"/>
		</view>
	</view>
	<button class="login" bindtap="doLogin">登录</button>
</view>
<view class="resetPwd" bindtap="resetPwd">重置密码</view>